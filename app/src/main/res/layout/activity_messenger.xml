<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessengerActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonType"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#FFFAFAFA"
        android:clipToPadding="false"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

    </android.support.v7.widget.RecyclerView>

    <RelativeLayout
        android:id="@+id/buttonType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendText"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/nonVegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="96dp"
            android:text="@string/nonVeg" />

        <Button
            android:id="@+id/vegButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:text="@string/Veg" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/buttonToppings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/sendText"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:visibility="gone">

        <Button
            android:id="@+id/yesToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="96dp"
            android:text="Yes" />

        <Button
            android:id="@+id/noToppings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="end"
            android:text="No" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/sendText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_alignParentStart="true"
        android:layout_above="@id/pizzaSelector">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_toStartOf="@+id/addButton"
            android:background="@drawable/back_addtask"
            android:elevation="2dp">

            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp"
                android:background="#fff"
                android:hint="@string/input_hint"
                android:minHeight="50dp"
                android:textSize="18sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/addButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"
            android:background="@drawable/back_fab"
            android:elevation="4dp">

            <ImageView
                android:id="@+id/fab_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_send_white_24dp"
                android:tint="#fff" />
        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/pizzaSelector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="130dp"
        android:layout_alignParentBottom="true"
        android:visibility="visible">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerSelector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>